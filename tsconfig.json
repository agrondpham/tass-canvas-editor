{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "lib": ["dom", "ES6"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "strict": true,
    "jsx": "react",
    "declaration": true,
    "resolveJsonModule": true,
    "outDir": "dist"
  },
  "include": [
    "src"
  ],
  "exclude": ["node_modules", "dist"]
}